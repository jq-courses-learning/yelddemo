
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-5 col-sm-12" align="center">
    <%= image_tag @restaurant.image_url %>

    <h2>
      <%= @restaurant.name %>
    </h2>

    <p>
      <strong>Address:</strong>
      <%= @restaurant.address %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @restaurant.phone %>
    </p>

    <p>
      <strong>Website:</strong>
      <%= link_to @restaurant.website, @restaurant.website %>
    </p>
    <%= link_to "Write a Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
    <br>
    <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-link" %> |
    <%= link_to 'Back', restaurants_path, class: "btn btn-link" %>
  </div>
  <div class="col-md-7 col-sm-12" align="center">
    <% if @reviews.blank? %>
      <h3>No Reviews yet!</h3>
    <% else %>
      <% @reviews.each do |review| %>
        <div class="review-rating" data-score="<%= review.rating %>"></div>
        <a><%= review.comment %></a>
        <br>
      <% end %>
    <% end %>
  </div>
</div>

